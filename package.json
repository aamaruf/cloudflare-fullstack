{
	"name": "cloudflare-fullstack",
	"version": "0.0.1",
	"license": "Apache-2.0",
	"scripts": {
		"start": "vite dev",
		"proxy": "wrangler dev node_modules/cfw-bindings-wrangler-bridge/worker.js --remote",
		"build": "vite build",
		"build:w": "vite build --watch",
		"neon:local": "drizzle-kit generate:pg --config=drizzleNeon.config.ts",
		"neon:prod": "drizzle-kit push:pg --config=drizzleNeon.config.ts",
		"supabase:local": "drizzle-kit generate:pg --config=drizzleSupabase.config.ts",
		"supabase:prod": "drizzle-kit push:pg --config=drizzleSupabase.config.ts",
		"cockroach:local": "drizzle-kit generate:pg --config=drizzleCockroach.config.ts",
		"cockroach:prod": "drizzle-kit push:pg --config=drizzleCockroach.config.ts",
		"d1:gen": "drizzle-kit generate:sqlite --out migrationsD1 --schema=src/db/schemas/schemaD1/index.ts",
		"d1:mig:local": "wrangler d1 migrations apply cloudflare_fullstack_db --local",
		"d1:mig:prod": "wrangler d1 migrations apply cloudflare_fullstack_db ",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@chientrm/adapter-cloudflare": "^3.0.2",
		"@sveltejs/adapter-cloudflare": "^3.0.1",
		"@neondatabase/serverless": "^0.6.0",

		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.37.1",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"cfw-bindings-wrangler-bridge": "^0.7.0",
		"dotenv": "^16.3.1",
		"eslint-config-prettier": "^9.0.0",
		"prettier": "^3.0.2",
		"prettier-plugin-svelte": "^3.0.3",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vitest": "^1.0.0",
		"wrangler": "^3.6.0",
		
		"@sveltejs/kit": "^2.0.6",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/bcryptjs": "^2.4.6",
		"autoprefixer": "^10.4.15",
		"bcryptjs": "^2.4.3",
		"chart.js": "^4.4.1",
		"cssnano": "^6.0.2",
		"currency.js": "^2.0.4",
		"dayjs": "^1.11.10",
		"drizzle-kit": "^0.20.8",
		"drizzle-orm": "^0.29.2",
		"eslint": "^8.56.0",
		"eslint-plugin-svelte": "^2.35.1",
		"export-to-csv": "^1.2.2",
		"flowbite": "^2.2.1",
		"flowbite-svelte": "^0.44.21",
		"jose": "^4.14.4",
		"jwt-decode": "^3.1.2",
		"nanoid": "^4.0.2",
		"postcss": "^8.4.32",
		"postcss-import": "^15.1.0",
		"postcss-nested": "^6.0.1",
		"postgres": "^3.4.3",
		"rxjs": "^7.8.1",
		"svelte-flatpickr": "^3.3.4",
		"svelte-french-toast": "^1.2.0",
		"tailwind-merge": "^2.2.0",
		"tailwindcss": "^3.4.0",
		"tailwindcss-animated": "^1.0.1"
	},
	"type": "module"
}
