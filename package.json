{
	"name": "cloudflare-fullstack",
	"version": "0.0.1",
	"license": "Apache-2.0",
	"scripts": {
		"start": "vite dev",
		"proxy": "wrangler dev node_modules/cfw-bindings-wrangler-bridge/worker.js --remote",
		"build": "vite build",
		"pg:gen": "drizzle-kit generate:pg --config=src/db/drizzlePg.config.ts",
		"pg:mig:prod": "drizzle-kit push:pg --config=src/db/drizzlePg.config.ts ",
		"d1:gen": "drizzle-kit generate:sqlite --out migrationsD1 --schema=src/db/schemas/schemaD1/index.ts",
		"d1:mig:local": "wrangler d1 migrations apply cloudflare_fullstack_db --local",
		"d1:mig:prod": "wrangler d1 migrations apply cloudflare_fullstack_db ",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"postgres": "https://github.com/porsager/postgres",
		"@fontsource/fira-mono": "^5.0.8",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.37.1",
		"@sveltejs/adapter-cloudflare": "^2.3.2",
		"@sveltejs/adapter-cloudflare-node": "https://github.com/wackfx/adapter-cloudflare-node",
		"@sveltejs/kit": "^1.22.6",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"cfw-bindings-wrangler-bridge": "^0.7.0",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.19.13",
		"drizzle-orm": "^0.28.5",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.32.4",
		"prettier": "^3.0.2",
		"prettier-plugin-svelte": "^3.0.3",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"tslib": "^2.6.2",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"vitest": "^0.34.2",
		"wrangler": "^3.6.0"
	},
	"type": "module"
}